        android:supportsRtl="true"
        android:theme="@style/Theme.YunusEmre">
        <activity android:name=".Arabic"></activity>
        <activity android:name=".English_Title" />
        <activity android:name=".Original_Turkish" />
        <activity android:name=".Urdu_Title_Turkish_Language" />
        <activity android:name=".Urdu_Dubbing" />
        <activity android:name=".Categories" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>